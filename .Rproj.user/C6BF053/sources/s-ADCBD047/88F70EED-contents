# Examples tab UI

tabPanel(
  title = "Examples",
  id    = "examplesTab",
  value = "examplesTab",
  name  = "examplesTab",
  class = "fade in",
  icon  = icon("line-chart"),
  tags$head(
    tags$style(HTML('#help{background-color:orange}'))
  ),
  # h1("Hasse Diagramms"),
  fluidRow(
  column(8,
  h1("Examples of Hasse diagramms")),
  column(4,
  actionButton("help", "Press for instructions", icon = icon("info")))),
  shiny::wellPanel(
    h2("1. Select your family of expectation models"),
  fluidRow(column(4,
                  introBox(
         selectInput("example_family",
                     label = h5("Model Family"),
                     choices = list("1. Two-way factorial" = 1,
                                    "2. Two-way factorial with control" = 2,
                                    "3. Two nested qualitative factors" = 3,
                                    "4. Three or more qualitative factors,
                                    nested in a chain" = 4),
                     selected = 1),
         data.step = 1, data.intro = "Hi!")
         ),
  conditionalPanel(
    condition = "input.example_family == 1 | input.example_family == 2",
    column(3,
           introBox(
           selectInput("example_factorial",
                       label = h5("Factors"),
                       choices = list("a. Orthogonal" = "ort",
                                      "b. Non-orthogonal" = "nonort"),
                       selected = 1),
           data.step = 2, data.intro = "Hi Again!")
    )))),
  column(12,
                    h1(" "),
                    sidebarLayout(
                      sidebarPanel(
                        uiOutput("choose_data"),
                        radioButtons("example_type",
                                     label = h3("Type of Plot"),
                                     choices = list("Unscaled" = "I",
                                                    "Scaled" = "II"),
                                     selected = "I")
                      ),
                      mainPanel(
                        conditionalPanel(
                          condition = "input.example_family == 4",
                          h1("Not implemented yet!")
                        ),
                        plotOutput("example_hasseExample"),
                        tableOutput("example_aovExample")
                      )
                    )

  )
)
